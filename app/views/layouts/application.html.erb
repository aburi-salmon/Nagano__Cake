<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<body>  
  <header>  
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDropdown" aria-controls="navbarTogglerDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">Nagano Cake</a>
        <div class="collapse navbar-collapse" id="navbarTogglerDropdown">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 offset-md-7">
                <% if member_signed_in? %>
                  <li><%= link_to 'マイページ', member_path(current_member),class: 'btn btn-light' %></li>
                  <li><%= link_to '商品一覧', products_path,class: 'nav-link active' %></li>
                  <li><%= link_to 'カート', cart_items_path,class: 'nav-link active' %></li>
                  <li><%= link_to 'ログアウト', destroy_member_session_path,class: 'nav-link active', method: :delete %></li>
                <% elsif admin_signed_in? %>
                  <li><%= link_to '商品一覧', admins_products_path,class: 'nav-link active' %></li>
                  <li><%= link_to '会員一覧', admins_members_path,class: 'nav-link active' %></li>
                  <li><%= link_to '注文履歴一覧',class: 'nav-link active' %></li>
                  <li><%= link_to 'ジャンル一覧', admins_genres_path,class: 'nav-link active' %></li>
                  <li><%= link_to 'ログアウト', destroy_member_session_path,class: 'nav-link active', method: :delete %></li>
                <% else %>
                  <li><%= link_to 'About', about_path,class: 'nav-link active' %></li>
                  <li><%= link_to '商品一覧', products_path,class: 'nav-link active' %></li>
                  <li><%= link_to '新規登録', new_member_registration_path,class: 'nav-link active' %></li>
                  <li><%= link_to 'ログイン', new_member_session_path,class: 'nav-link active' %></li>
                <% end %>
          </ul>
        </div>
      </div>
    </nav>
</header>
  
    <%= yield %>
  </body>
</html>
