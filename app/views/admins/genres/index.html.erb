<h2>ジャンル一覧・追加</h2>
<div class="container">
  <div class="row">
    <div class="col">
      <%= form_with model: [:admins, @genre],method: :post, local: true do |f| %>
        <%= "ジャンル名" %>
        <%= f.text_field :name,placeholder: "ジャンル名" %>
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to "編集する", edit_admins_genre_path(genre), method: :get, local: true, class: "btn btn-success" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
