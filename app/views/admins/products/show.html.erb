<h5 class="offset-md-1 mb-3">商品詳細</h5>
<div class="container">
  <div class='row'>
    <div class='col-md-4'>
      <%= attachment_image_tag @product, :image, size: "280x200", fallback: "logo.png" %>
    </div>
    <div class='col-md-8'>
      <div class='row'>
        <div class='col-md-3 mb-2'>
          <%= "商品名" %>
        </div>
        <div class='col-md-0'>
          <%= @product.name  %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-2'>
          <%= "商品説明" %>
        </div>
        <div class='col-md-0'>
          <%= @product.description %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-2'>
          <%= "ジャンル" %>
        </div>
        <div class='col-md-0'>
          <%= @genre.name %>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-2'>
          <%= "税込価格" %><br />
          <%= "(税抜価格)" %>
        </div>
        <div class='col-md-0 d-flex align-items-center h5'>
          <%= @product.add_tax_price.to_s(:delimited)  %>（<%= @product.ex_unit_price.to_s(:delimited)  %>）円
        </div>
      </div>
      <div class='row'>
        <div class='col-md-3 mb-5'>
          <%= "販売ステータス" %>
        </div>
        <div class='col-md-0'>
          <% if @product.is_active == true %>
            <p class="text-success font-weight-bold">販売中</p>
          <% elsif @product.is_active == false %>
            <p class="text-secondary font-weight-bold">販売停止中</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class='text-center'>
    <%= link_to "編集する", edit_admins_product_path(@product), class: 'btn btn-success' %>
  </div>
</div>
