<h2>商品詳細</h2>
<div class="container">
  <%= attachment_image_tag @product, :image, size: "200x200", fallback: "no_image_logo.png" %>
  <div class="row">
    <div class="col">
      <%= "商品名" %>
      <%= @product.name  %>
    </div>
    <div class="col">
      <%= "商品説明" %>
      <%= @product.description %>
    </div>
    <div class="col">
      <%= "ジャンル" %>
      <%= @genre.name %>
    </div>
    <div class="col">
      <%= "税込価格" %>
      <%= "(税抜価格)" %>
      <%= @product.add_tax_price.to_s(:delimited)  %>（<%= @product.ex_unit_price.to_s(:delimited)  %>）円
    </div>
    <div class="col">
      <%= "販売ステータス" %>
      <% if @product.is_active == true %>
        販売中
      <% elsif @product.is_active == false %>
        販売停止中
      <% end %>
    </div>
      <%= link_to "編集する", edit_admins_product_path(@product), class: 'btn btn-success' %>
  </div>
</div>
