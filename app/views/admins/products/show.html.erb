<div class='container px-1 px-sm-0'>
  <h2>商品詳細</h2>
  <div class='row'>
    <div class='col-md-4'>
      <%= attachment_image_tag @product, :image, size: "200x200", fallback: "logo.png" %>
    </div>
    <div class='col-md-3'>
      <p>
        <%= "商品名" %>
      </p>
      <p>
        <%= "商品説明" %>
      </p>
      <p>
        <%= "ジャンル" %>
      </p>
      <p>
        <%= "税込価格" %><br />
        <%= "(税抜価格)" %>
      </p>
      <p>
        <%= "販売ステータス" %>
      </p>
    </div>
    <div class='col-md-4'>
      <p>
        <%= @product.name  %>
      </p>
      <p>
        <%= @product.description %>
      </p>
      <p>
        <%= @genre.name %>
      </p>
      <p>
        <%= @product.add_tax_price.to_s(:delimited)  %>（<%= @product.ex_unit_price.to_s(:delimited)  %>）円
      </p>
      <% if @product.is_active == true %>
        <p class="text-success font-weight-bold">販売中</p>
      <% elsif @product.is_active == false %>
        <p class="text-secondary font-weight-bold">販売停止中</p>
      <% end %>
      <%= link_to "編集する", edit_admins_product_path(@product), class: 'btn btn-success' %>
    </div>
  </div>
</div>
