<% if @product.errors.any? %>
  <%= @product.errors.count %>件のエラーが発生しました<br/>
  <% @product.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<h5 class="offset-md-3" >商品新規登録</h5><br />
<div class="container">
  <%= form_with model: [:admins, @product], local: true do |f| %>
  <div class="row offset-md-2 mb-2">
    <div class="col-md-3">
      <%= "商品画像" %>
    </div>
    <div class="col">
      <%= f.attachment_field :image %>
    </div>
  </div>
  <div class="row offset-md-2 mb-2">
    <div class="col-md-3">
      <%= "商品名" %>
    </div>
    <div class="col">
      <%= f.text_field :name,placeholder: "商品名", size: "40" %>
    </div>
  </div>
  <div class="row offset-md-2 mb-2">
    <div class="col-md-3">
      <%= "商品説明" %>
    </div>
    <div class="col">
      <%= f.text_area :description,placeholder: "ここに説明文を記述します", size: "40x8" %>
    </div>
  </div>
  <div class="row offset-md-2 mb-2">
    <div class="col-md-3">
      <%= "ジャンル" %>
    </div>
    <div class="col">
      <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択してください--" %>
    </div>
  </div>
  <div class="row offset-md-2 mb-2">
    <div class="col-md-3">
      <%= "税抜価格" %>
    </div>
    <div class="col">
      <%= f.text_field :ex_unit_price,placeholder: "1000", size: "40" %><%= "円" %>
    </div>
  </div>
  <div class="row offset-md-2 mb-3">
    <div class="col-md-3">
      <%= "販売ステータス" %>
    </div>
    <div class="col-md-8">
      <%= f.radio_button :is_active,true, checked: true %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :is_active,false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </div>
  </div>
  <div class="text-center">
    <%= f.submit "新規登録", class: 'btn btn-success btn-lg' %>
  </div>
    <% end %>
</div>
