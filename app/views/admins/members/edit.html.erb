<div class="container">
  <div class="row my-4">
    <h5 class="bg-ligth" >
      <%= @member.last_name %><%= @member.first_name %>さんの会員情報編集
    </h5>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "会員ID" %>
    </div>
    <div class="col">
      <%= @member.id %>
    </div>
  </div>
  <%= form_with model:[:admins, @member],method: :patch, local: true do |f| %>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "氏名" %>
    </div>
    <div class="col">
      <%= f.text_field :last_name %> <%= f.text_field :first_name %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "フリガナ" %>
    </div>
    <div class="col">
      <%= f.text_field :kana_last_name %> <%= f.text_field :kana_first_name %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "郵便番号" %>
    </div>
    <div class="col">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "住所" %>
    </div>
    <div class="col">
      <%= f.text_field :address, size: "80" %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "電話番号" %>
    </div>
    <div class="col">
      <%= f.text_field :phone_number %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "メールアドレス" %>
    </div>
    <div class="col">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="row mb-3">
    <div class="col-md-2">
      <%= "会員ステータス" %>
    </div>
    <div class="col">
      <%= f.radio_button :is_deleted,false %>
      <%= f.label :is_deleted, '有効', value: false %>
      <%= f.radio_button :is_deleted,true %>
      <%= f.label :is_deleted, '退会', value: true %>
    </div>
 </div>
    <div class="text-center">
      <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
    <% end %>

