<div class='container px-1 px-md-0'>
  <div class='row'>
    <div class='col-md-3'>
      <table border="1" width="150" height="200">
        <tr align="center">
          <th>ジャンル検索</th>
        </tr>
        <tr>
          <td>
            <% @genres.each do |genre| %>
              <%= genre.name %><br />
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  <div class='col-md-9'>
    <div class='row'>
      <div class='col-md-5'>
        <%= attachment_image_tag @product, :image, size: "280x200", fallback: "logo.png" %>
      </div>
      <div class='col-md-6'>
        <h3>
          <%= @product.name  %>
        </h3>
        <p>
          <%= @product.description %>
        </p>
        <h5>
          ￥<%= @product.add_tax_price.to_s(:delimited)  %><span style="font-size:13px">（税込）</span>
        </h5>
        <%= form_for @cart_item, url: cart_items_path do |f| %>
          <%= f.hidden_field :product_id, :value => @product.id %>
          <%= f.number_field :quantity, placeholder: '個数選択',class: 'btn btn-default',min: 1 %>
          <%= f.submit 'カートに入れる' ,class: 'btn btnprimary' %>
        <% end %>
      </div>
    </div>
</div>
</div>
</div>

