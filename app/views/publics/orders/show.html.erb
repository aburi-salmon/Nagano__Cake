<h3>注文履歴詳細</h3>
<h4>注文情報</h4>
<table>
  <tr>
    <th>注文日</th>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td><%= @order.address %></td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= @order.status %></td>
  </tr>
</table>

<h4>請求情報</h4>
<table>
  <tr>
    <th>商品合計</th>
    <td><%= @total.round.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>配送料</th>
    <td><%= @delivery_cost %></td>
  </tr>
  <tr>
    <th>ご請求額</th>
    <td><%= @charge.round %></td>
  </tr>
</table>

<h4>注文内容</h4>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.product.name %></td>
      <td><%= (cart_item.product.ex_unit_price*1.08).floor %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= (cart_item.product.ex_unit_price*1.08).floor * cart_item.quantity %></td>
    </tr>
  </tbody>
  <% end %>
</table>
