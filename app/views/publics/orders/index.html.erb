<h3>注文履歴一覧</h3>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td>
        <%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name %>
      </td>
      <% @cart_items.each do |cart_item| %>
        <td><%= cart_item.product.name %></td>
      <% end %>
      <td><%= @charge.round.to_s(:delimited) %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", order_path(order), class: "btn" %></td>
    </tr>
  </tbody>
  <% end %>
</table>