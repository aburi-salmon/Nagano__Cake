<h3>注文情報入力</h3>
<%= form_with model: @order, url: confirm_orders_path, local:true do |f| %>
<div class="form-group">
  <label for="payment_method">支払方法</label><br>
    <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
    <%= f.label :クレジットカード, class: "payment_method_label" %><br>
    <%= f.radio_button :payment_method, :銀行振込 %>
    <%= f.label :銀行振込, class: "payment_method_label" %>
</div>
<div class="form-group">
  <label for="address">お届け先</label><br>
    <%= f.radio_button :order_address, 0, checked: true %>
    <%= f.label :address, "ご自身の住所", value: 0 %><br>
    〒<%= @member.postal_code %>
    <%= @member.address %><br>
    <%= @member.last_name + @member.first_name %><br>

    <%= f.radio_button :order_address, 1 %>
    <%= f.label :address, "登録済住所から選択", value: 1 %><br>
    <%= f.collection_select :address_id, @addresses, :id, :full_address, prompt: "選択してください" %><br>

    <%= f.radio_button :order_address, 2 %>
    <%= f.label :address, "新しいお届け先", value: 2 %><br>
    <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
    <%= f.text_field :postal_code %><br>
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, size: "50x1" %><br>
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name %><br>

    <%= f.submit "確認画面へ進む" %>
</div>
<% end %>
