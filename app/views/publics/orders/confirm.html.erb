<h3>注文情報確認</h3>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td>
        <%= attachment_image_tag cart_item.product, :image, size: "40x40", fallback: "logo.png" %>
        <%= cart_item.product.name %>
      </td>
      <td><%= (cart_item.product.ex_unit_price*1.08).floor %></td>
      <td><%= cart_item.quantity %></td>
      <td><%= (cart_item.product.ex_unit_price*1.08).floor * cart_item.quantity %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<table>
  <tr>
    <th>送料</th>
    <td><%= @delivery_cost %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @total.round.to_s(:delimited) %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @charge.round.to_s(:delimited) %></td>
  </tr>
</table>

<table>
  <tr>
    <th>支払方法</th>
    <td><%= @order.payment_method %></td>
  </tr>
  <tr>
    <th>お届け先</th>
    <td>
      〒<%= @order.postal_code %> <%= @order.address %><br>
      <%= @order.name %>
    </td>
  </tr>
</table>

<%= form_with model: @order, local:true do |f| %>
  <%= f.hidden_field :member_id, value: current_member.id %>
  <%= f.hidden_field :charge, value: @charge.round.to_s(:delimited) %>
  <%= f.hidden_field :delivery_cost, value: @delivery_cost %>
  <%= f.hidden_field :status, value: "入金待ち" %>
  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :name, value: @order.name %>
  <%= f.submit "注文を確定する" %>
<% end %>
